upstream plone {
    server haproxy:5000;
}

upstream sparql {
   server virtuoso:8890;
}

upstream content_registry {
   server cr:8080;
}

server {
    listen 80;
    server_name test-cr.digital-agenda-data.eu;
    return 301 http://test.digital-agenda-data.eu/data$request_uri;
}

server {
    listen       80;
    server_name  semantic.digital-agenda-data.eu;

    location /elda {
        proxy_pass http://elda:8080/elda;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Host $host:$server_port;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto "https";
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Proxy "";
    }

    location / {
        proxy_pass http://elda:8080/elda/;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Host $host:$server_port;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto "https";
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Proxy "";
   }
}


server {
    listen       80;
    server_name  test.digital-agenda-data.eu;

    location /download {
      alias  /export/download; 
    }

    location /data/ {
        proxy_pass http://content_registry/data/;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Host $host:$server_port;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto "https";
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Proxy "";
    }

    location /sparql {
        proxy_pass http://sparql/sparql;
     }

    ## Matomo Analytics via php-fpm

    # rewrite /analytics to /analytics/
    location = /analytics {
        rewrite ^/analytics$ /analytics/ permanent;
    }


    location /analytics/ {

    
    add_header Referrer-Policy origin; # make sure outgoing links don't show the URL to the Matomo instance
    
    root /var/www/matomo/; # replace with path to your matomo instance

    index index.php;


    # Relay all index.php and piwik.php requests to fastcgi.
    location ~ /analytics/(index|matomo|piwik|js/index)\.php {
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root/$1.php;
        fastcgi_param HTTPS 'on';
        fastcgi_param MM_COUNTRY_NAME $geoip2_data_country_name;
        fastcgi_param MM_COUNTRY_CODE $geoip2_data_country_code;
        fastcgi_param MM_CITY_NAME $geoip2_data_city_name;
        fastcgi_param HTTP_PROXY ""; # prohibit httpoxy: https://httpoxy.org/
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Host $host:$server_port;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto "https";
        fastcgi_pass piwik:9000;
    }

    ## deny access to all other .php files
    location ~* ^/analytics/.+\.php$ {
        deny all;
        return 403;
    }

    ## serve all other files normally 
    location /analytics/ {
        try_files $uri $uri/ =404;
    }  


    ## disable all access to the following directories 
    location ~ /analytics/(config|tmp|core|lang) {
        deny all;
        return 403; # replace with 404 to not show these directories exist
    }
    location ~ /analytics/\.ht {
        deny  all;
        return 403;
    }

    location ~ \.(gif|ico|jpg|png|svg|js|css|htm|html|mp3|mp4|wav|ogg|avi|ttf|eot|woff|woff2|json)$ {
        allow all;
        ## Cache images,CSS,JS and webfonts for an hour
        ## Increasing the duration may improve the load-time, but may cause old files to show after an Matomo upgrade
        expires 1h;
        add_header Pragma public;
        add_header Cache-Control "public";
    }

    location ~ /analytics/(libs|vendor|plugins|misc/user) {
        deny all;
        return 403;
    }

    ## properly display textfiles in root directory
    location ~ /analytics/(.*\.md|LEGALNOTICE|LICENSE) {
        default_type text/plain;
    }


    # No crawling of this site for bots that obey robots.txt.
    location = /analytics/robots.txt {
        access_log off;
        return 200 "User-agent: *\nDisallow: /\n";
    }
    }

    ## Everything else goes to Plone

    location / {
        proxy_pass http://plone/VirtualHostBase/https/test.digital-agenda-data.eu/Plone/VirtualHostRoot/;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Host $host:$server_port;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto "https";
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Proxy "";
    }
}
